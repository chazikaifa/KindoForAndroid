<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity"
    android:layout_gravity="center"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/player_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_step_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:src="@drawable/icon_player1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/player1"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/p1_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/active_step_blue"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/p1_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/active_step_blue"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/p1_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/unusable_step"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/p1_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/unusable_step"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/p2_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/inactive_step"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/p2_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/inactive_step"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/p2_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/unusable_step"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/p2_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/unusable_step"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
            android:src="@drawable/icon_player2_inactive"
            android:id="@+id/player2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
    <app.kindoforandroid.GameView
        android:id="@+id/gameView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="5">

    </app.kindoforandroid.GameView>


</LinearLayout>
